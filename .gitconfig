[user]
	name = Romain Vimont
	email = rom@rom1v.com
[color]
	ui = true
[merge]
	conflictstyle = diff3
[alias]
	lg = log --oneline --graph --decorate --date-order
	diffc = diff --cached
	diffh = diff HEAD
	rma = !git ls-files -z --deleted | xargs -0 git rm
	rv = log -p --reverse #review
	rinit =!git init && git commit --allow-empty -m 'Initial empty commit'
